{
  "name": "PXL University College Codespace",
  "image": "mcr.microsoft.com/devcontainers/javascript-node:22",
  
  "features": {
    
  },

  "postCreateCommand": "mkdir -p ~/.vscode-remote/extensions && cp -r .devcontainer/lint ~/.vscode-remote/extensions/pixellint",
  
  "customizations": {
    "vscode": {
      "extensions": [
  
        "-github.copilot",
        "-github.copilot-chat",
        
        "-tabnine.tabnine-vscode",
        "-visualstudioexptteam.vscodeintellicode",
        "-amazonwebservices.aws-toolkit-vscode"
      ],
      
      "settings": {
        "workbench.extensions.enabled": false
      }
    }
  },
  
  // Blokkeer port forwarding om externe communicatie te verhinderen
  "forwardPorts": []
}
