{
  "name": "PXL University College Codespace",
  "image": "mcr.microsoft.com/devcontainers/javascript-node:22",
  
  "features": {
    // Voeg hier alleen noodzakelijke tools toe voor het examen
  },
  "postCreateCommand": "bash .devcontainer/setup-proxy.sh",
  
  "customizations": {
    "vscode": {
      "extensions": [
        // VERWIJDER Copilot extensies expliciet
        "-github.copilot",
        "-github.copilot-chat",
        
        // VERWIJDER andere AI-assistentie tools
        "-tabnine.tabnine-vscode",
        "-visualstudioexptteam.vscodeintellicode",
        "-amazonwebservices.aws-toolkit-vscode"
        
      ],
      
      "settings": {
        "workbench.extensions.enabled": false
      }
    }
  },
  
  // Blokkeer port forwarding om externe communicatie te verhinderen
  "forwardPorts": []
}
